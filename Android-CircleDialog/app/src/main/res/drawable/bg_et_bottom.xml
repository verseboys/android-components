<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/login_et_radius"
                android:bottomRightRadius="@dimen/login_et_radius" />
            <solid android:color="@color/divider" />
        </shape>
    </item>
    <!-- Body -->
    <item
        android:bottom="@dimen/login_et_stroke"
        android:left="@dimen/login_et_stroke"
        android:right="@dimen/login_et_stroke">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/login_et_radius"
                android:bottomRightRadius="@dimen/login_et_radius" />
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>